# Firebase Configuration
# Get these values from Firebase Console: https://console.firebase.google.com/
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Admin Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# SMTP Email Configuration
# Get these values from your email hosting provider
SMTP_HOST=your_smtp_server_here
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password_here
SMTP_FROM_EMAIL=your_email@example.com
NOTIFICATION_EMAIL=your_notification_email@example.com

# Additional notification emails (optional, comma-separated)
# These emails will also receive booking notifications
# If not set, defaults to hardcoded value in code
ADDITIONAL_NOTIFICATION_EMAILS=additional_email@example.com
